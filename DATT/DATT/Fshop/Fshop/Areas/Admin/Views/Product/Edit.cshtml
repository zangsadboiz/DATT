@model Fshop.Models.Product;
@using Fshop.Utilities;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận sửa sản phẩm</h2>
    </div>

    <div class="container shadow p-5">

        <div class="row pb-2">
            <h2>Sửa bài viết</h2>
        </div>
        <form asp-action="Edit" method="post">
            <div class="form-row">
                <div>
                    <input type="text" class="form-control mb-3" asp-for="ProductID" type="hidden" />

                    <div class="form-group col-md-12">
                        <label asp-for="ProductName">Tiêu đề</label>
                        <input type="text" class="form-control mb-3" asp-for="ProductName">
                    </div>
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="Price">Giá</label>
                    <input type="text" class="form-control mb-3" asp-for="Price">
                </div>

                <div class="form-group col-md-12">
                    <label class="control-label">Ảnh</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <button class="btn btn-success" type="button" onclick="openDialog()">Chọn ảnh</button>
                        </div>
                        <input type="text" class="form-control" asp-for="Images" id="file_input" aria-describedby="button-addon2">
                    </div>
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="Contents">Nội dung</label>
                    <textarea asp-for="Contents" class="form-control"></textarea>
                </div>

                <div class="form-group col-md-6 mt-3 mb-3">
                    <label>
                        @Html.CheckBox("IsActive", Model.IsActive)
                        Hiển thị
                    </label>
                </div>

                <div class="form-group d-none">
                    <input asp-for="MenuID" class="form-control" value="@Model.MenuID"> 

            </div>

                <a class="btn btn-dark" href="javascript:history.back()">
                <i class="bi bi-arrow-left-circle"></i>Quay lại
            </a>
                <button type="submit" class="btn btn-light">
                <i class="bi bi-file-plus-fill"></i> Lưu lại
            </button>

        </form>

    </div>


</main>

@{
    var summerNote = new Fshop.Areas.Admin.Models.SummerNote("#Contents");
    <partial name="_SummerNote" model="summerNote" />
}