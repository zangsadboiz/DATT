@model Fshop.Models.Product;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận xóa sản phẩm</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="ProductID">ID</label>
            <input type="text" class="form-control mb-3" asp-for="ProductID" disabled>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="ProductName">Tiêu đề</label>
            <input type="text" class="form-control mb-3" asp-for="ProductName" disabled>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Contents">Nội dung</label>
            <input type="text" class="form-control mb-3" asp-for="Contents" disabled>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Price">Giá</label>
            <input type="text" class="form-control mb-3" asp-for="Price" disabled>
        </div>
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MenuID">
        <a class="btn btn-dark" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i>
            Quay lại
        </a>
        <button type="submit" class="btn btn-light">
            <i class="bi bi-trash-fill"></i>
            Xóa sản phẩm
        </button>
    </form>
</main>