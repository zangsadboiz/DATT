@model Fshop.Areas.Admin.Models.AdminUser;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận xóa người dùng</h2>
    </div>
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Xóa Người dùng</h2>
        </div>
        <form method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="UserID">ID người dùng</label>
                    <input type="text" class="form-control mb-3" asp-for="UserID" readonly />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="UserName">Tên người dùng</label>
                    <input type="text" class="form-control mb-3" asp-for="UserName" readonly />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Email">Email</label>
                    <input type="email" class="form-control mb-3" asp-for="Email" readonly />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="IsActive">Trạng thái</label>
                    <input type="text" class="form-control mb-3" asp-for="IsActive" readonly />
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-danger p-2"><i class="bi bi-trash"></i> Xác nhận xóa</button>
            <a asp-controller="AdminUser" asp-action="Delete" class="btn btn-lg btn-warning p-2">Hủy bỏ</a>
        </form>
    </div>
</main>