@model Fshop.Models.Review

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="container">
        <div class="pagetitle">
            <h2>Xác nhận xóa đánh giá</h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="ReviewID">ID:</label>
                            <input type="text" class="form-control" id="ReviewID" asp-for="ReviewID" disabled>
                        </div>
                        <div class="form-group">
                            <label for="Author">Tác giả:</label>
                            <input type="text" class="form-control" id="Author" asp-for="Author" disabled>
                        </div>
                        <div class="form-group">
                            <label for="Title">Tiêu đề:</label>
                            <input type="text" class="form-control" id="Title" asp-for="Title" disabled>
                        </div>
                        <div class="form-group">
                            <label for="IsActive">Trạng thái:</label>
                            <input type="text" class="form-control" id="IsActive" asp-for="IsActive" disabled>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-3">
                <a class="btn btn-dark" href="javascript:history.back()">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-light">
                    <i class="bi bi-trash-fill"></i> Xóa đánh giá
                </button>
            </div>
        </div>
    </div>
</main>
