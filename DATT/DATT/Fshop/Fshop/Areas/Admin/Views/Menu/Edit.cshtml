@model Fshop.Models.Menu
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-dark text-white">
                        <h2 class="text-center mb-0">Xác nhận sửa menu</h2>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="Edit">
                            <div asp-validation-summary="All"></div>
                            <input asp-for="MenuID" type="hidden" />

                            <div class="form-group">
                                <label asp-for="MenuName" class="text-dark">Tên Menu</label>
                                <input asp-for="MenuName" class="form-control" placeholder="Nhập tên menu" />
                                <span asp-validation-for="MenuName" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Levels" class="text-dark">Levels</label>
                                    <select asp-for="Levels" class="form-control">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="ParentID" class="text-dark">ParentID</label>
                                    <input asp-for="ParentID" class="form-control" placeholder="Enter ParentID" />
                                    <span asp-validation-for="ParentID" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="ControllerName" class="text-dark">Link</label>
                                    <input asp-for="ControllerName" class="form-control" placeholder="Enter Link" />
                                    <span asp-validation-for="ControllerName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="MenuOrder" class="text-dark">MenuOrder</label>
                                    <input asp-for="MenuOrder" class="form-control" placeholder="Enter MenuOrder" />
                                    <span asp-validation-for="MenuOrder" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Position" class="text-dark">Position</label>
                                    <input asp-for="Position" class="form-control" placeholder="Enter Position" />
                                    <span asp-validation-for="Position" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>
                                        @Html.CheckBox("IsActive",false)
                                        Hiển thị
                                    </label>
                                </div>
                            </div>

                            <div class="form-group text-center mt-4">
                                <button type="submit" class="btn btn-lg btn-outline-dark">Lưu</button>
                                <a asp-controller="Menu" asp-action="Index" class="btn btn-lg btn-outline-dark">Quay lại</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
