@using Fshop.Models;
@model IList<Menu>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh sách menu</h2>
    </div>
    <div class="row mb-3">
        <div class="col">
            <a type="button" class="btn btn-dark" asp-area="Admin" asp-controller="Menu" asp-action="Create">
                <i class="bi bi-file-earmark-text me-1"></i> Thêm Menu
            </a>
        </div>
    </div>
    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body mt-4">
                        <div class="table-responsive">
                            <table class="table table-borderless datatable">
                                <thead>
                                    <tr>
                                        <th class="col-1">#</th>
                                        <th class="col-3">Tiêu đề</th>
                                        <th class="col-1">Mức</th>
                                        <th class="col-2">Menu cha</th>
                                        <th class="col-1">Thứ tự</th>
                                        <th class="col-1">Ẩn/Hiện</th>
                                        <th class="col-3">Chức năng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@item.MenuID</th>
                                            <td><a asp-area="Admin" asp-controller="Menu" asp-action="Details" asp-route-id="@item.MenuID" class="text-primary">@item.MenuName</a></td>
                                            <td>@item.Levels</td>
                                            <td>@item.ParentID</td>
                                            <td>@item.MenuOrder</td>
                                            <td>@item.IsActive</td>
                                            <td>
                                                <a asp-area="Admin" asp-controller="Menu" asp-action="Edit" asp-route-id="@item.MenuID"
                                                   class="btn btn-dark" title="Sửa menu"><i class="bi bi-pencil"></i> Sửa</a>

                                                <a asp-area="Admin" asp-controller="Menu" asp-action="Delete" asp-route-id="@item.MenuID"
                                                   class="btn btn-light" title="Xóa menu"><i class="bi bi-trash"></i> Xóa</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
