@using Fshop.Models;
@model IList<About>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle" style="background-color: #f8f9fa; padding: 20px;">
        <h2 style="color: #343a40;">Danh sách dịch vụ</h2>
    </div>

    <div class="container shadow p-5" style="background-color: #f8f9fa; border-radius: 10px;">
        <p>
            <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="About" asp-action="Create">
                <i class="bi bi-file-earmark-text me-1">Thêm dịch vụ</i>
            </a>
        </p>
        <section class="section dashboard">
            <div class="row">
                <div class="col-12">
                    <div class="card recent-sales overflow-auto" style="border: none;">
                        <div class="card-body mt-4">
                            <table class="table table-borderless datatable">
                                <thead>
                                    <tr>
                                        <th class="col-1 text-center">#</th>
                                        <th class="col-3 text-center">Tiêu đề</th>
                                        <th class="col-2 text-center">Biểu tượng</th>
                                        <th class="col-1 text-center">Trạng thái</th>
                                        <th class="col-1 text-center">Chức năng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th class="text-center" scope="row"> @item.FeaturesID</th>
                                            <th><a asp-area="Admin" asp-controller="About" asp-action="Details" asp-route-id="@item.FeaturesID" class="text-primary">@item.FeaturesTitle</a></th>
                                            <th class="text-center">@item.FeaturesIcon</th>
                                            <th class="text-center">@item.IsActive</th>
                                            <th class="text-center">
                                                <a asp-area="Admin" asp-controller="About" asp-action="Edit" asp-route-id="@item.FeaturesID"
                                                   class="btn btn-dark btn-sm" title="Sửa dịch vụ"><i class="bi bi-pencil"></i></a>
                                                <a asp-area="Admin" asp-controller="About" asp-action="Delete" asp-route-id="@item.FeaturesID"
                                                   class="btn btn-light btn-sm" title="Xóa dịch vụ"><i class="bi bi-trash"></i></a>
                                            </th>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>
