@model Fshop.Models.About
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận thêm dịch vụ</h2>
    </div>
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Thêm mới Dịch vụ</h2>
        </div>
        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="FeaturesTitle">Tiêu đề</label>
                    <input type="text" class="form-control mb-3" asp-for="FeaturesTitle" placeholder="Nhập tiêu đề dịch vụ" />
                    <span asp-validation-for="FeaturesTitle" class="alert-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="FeaturesIcon">Biểu tượng</label>
                    <input type="text" class="form-control mb-3" asp-for="FeaturesIcon" placeholder="Nhập biểu tượng dịch vụ" />
                    <span asp-validation-for="FeaturesIcon" class="alert-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                    <label asp-for="Description">Mô tả</label>
                    <textarea class="form-control" asp-for="Description" rows="3" placeholder="Nhập mô tả dịch vụ"></textarea>
                    <span asp-validation-for="Description" class="alert-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="IsActive">Trạng thái</label>
                    <select asp-for="IsActive" class="form-control" id="IsActive">
                        <option value="true">Hiển thị</option>
                        <option value="false">Ẩn</option>
                    </select>
                </div>
            </div>

            <div class="form-group mt-5 mb-5">
                <button type="submit" class="btn btn-lg btn-outline-dark p-2 mr-5">
                    <i class="bi bi-arrow-left-circle"></i> Lưu
                </button>

                <a asp-controller="About" asp-action="Index" class="btn btn-lg btn-outline-dark p-2">
                    <i class="bi bi-file-plus-fill"></i> Quay lại
                </a>

            </div>
        </form>
    </div>
</main>